<%= link_to content_tag(:span, "<b>#{@merchant_pos_account.firstname} #{@merchant_pos_account.lastname}</b> [#{@merchant_pos_account.company}] -- #{@merchant_pos_account.created_at.strftime("%d-%m-%Y")} à #{@merchant_pos_account.created_at.strftime("%Hh %Mmn")}".html_safe), "#", class: "tgg-trigger" %>

<div class = "toggle_container" style = "display: none; overflow: hidden;">
  <div class="sidebar six columns">
    <h2 class = "sb_header">Informations liées au POS marchand</h2>
    <p>
      <b><%= link_to "Créer un pos particulier", new_private_pos_account_path(@merchant_pos_account.certified_agent_id) %></b>
    </p>
    <p>
      <b><%= link_to "Liste des pos particuliers", list_private_pos_account_path(@merchant_pos_account.certified_agent_id) %></b>
    </p>
    <p>
      <b>Nom:</b><br /> <%= @merchant_pos_account.firstname %>
    </p>
    <p>
      <b>Prénom:</b><br /> <%= @merchant_pos_account.lastname %>
    </p>
    <p>
      <b>Entreprise:</b><br /> <%= @merchant_pos_account.company %>
    </p>
    <p>
      <b>Numéro fixe:</b><br /> <%= @merchant_pos_account.phone_number %>
    </p>
    <p>
      <b>Numéro mobile:</b><br /> <%= @merchant_pos_account.mobile_number %>
    </p>
    <p>
      <b>Adresse:</b><br /> <%= @merchant_pos_account.address %>
    </p>
    <p>
      <b>Email:</b><br /> <%= @merchant_pos_account.email %>
    </p>
    <p>
      <b>Description des activités:</b>
      <div class = "quoteBox2">
        <div class = "quote-text2">
          <%= simple_format(@merchant_pos_account.activities_description) %>
        </div>
      </div>
    </p>
    <p>
      <b>Pays:</b><br /> <%= @merchant_pos_account.country.name %>
    </p>
    <div class = "divider3"></div>
    <p>
      <b>Numéro de compte:</b><br /> <%= @merchant_pos_account.account_number %>
    </p>
    <p>
      <b>Code bancaire:</b><br /> <%= @merchant_pos_account.bank_code %>
    </p>
    <p>
      <b>Code guichet:</b><br /> <%= @merchant_pos_account.wicket_code %>
    </p>
    <p>
      <b>RIB:</b><br /> <%= @merchant_pos_account.rib %>
    </p>
    <div class = "divider3"></div>
    <p>
      <b>Id agent agréé:</b><br /> <%= @merchant_pos_account.certified_agent_id %>
    </p>
    <p>
      <b>Date de création:</b><br /> <%= @merchant_pos_account.created_at.strftime("%d-%m-%Y") %> à <%= @merchant_pos_account.created_at.strftime("%Hh %Mmn") %>
    </p>
  </div>
  <div class="sidebar six columns">
    <h2 class = "sb_header">Informations liées à Paymoney</h2>
    <p>
      <b>Numéro de compte:</b><br /> <%= @merchant_pos_account.paymoney_account_number %>
    </p>
    <p>
      <b>Mot de passe:</b><br /> <%= @merchant_pos_account.paymoney_password %>
    </p>
    <p>
      <b>Token:</b><br /> <%= @merchant_pos_account.paymoney_token %>
    </p>
  </div>
</div>
