<%- if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name), class: "colored_link" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Mot de passé oublié?", new_password_path(resource_name), class: "colored_link" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Renvoyer les instructions de confirmation", new_confirmation_path(resource_name), class: "colored_link" %><br />
<% end -%>

