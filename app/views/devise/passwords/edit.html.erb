<!-- PAGE HEADER -->
<div class="container page-header ph-bg2">
  <div class="row">
    <div class="twelve columns">
      <p class="page-title">Modifiez votre mot de passe</p>
      <ul class="breadcrumbs">
        <li><a href="<%= root_path %>">Accueil</a></li>
        <li><a href="<%= select_sign_in_profile_path %>">SÃ©lection du profil de connexion</a></li>
      </ul>
    </div>
  </div>
</div>
<!-- END PAGE HEADER -->

<div class="container main_content">
  <div class="row">
    <div class="twelve columns">
      <%= devise_error_messages! %>
      <div id = "login_box">
        <h1>Entrez l'email</h1>
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.password_field :password, :autofocus => true, class: "form-control", placeholder: "Veuillez entrer le mot de passe" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, :autofocus => true, class: "form-control", placeholder: "Veuillez confirmer le mot de passe" %>
          </div>

          <div  class="form-group">
            <%= f.submit "Valider", class: "button" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
