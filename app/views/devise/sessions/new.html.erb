<!-- PAGE HEADER -->
<div class="container page-header ph-bg2">
  <div class="row">
    <div class="twelve columns">
      <p class="page-title">Connectez vous</p>
      <ul class="breadcrumbs">
        <li><a href="<%= root_path %>">Accueil</a></li>
        <li><a href="<%= select_sign_in_profile_path %>">SÃ©lection du profil de connexion</a></li>
      </ul>
    </div>
  </div>
</div>
<!-- END PAGE HEADER -->

<div class="container main_content">
  <div class="row">
    <div class="twelve columns">
      <%= render "flash" %>
      <div id = "login_box">
        <h1>Connexion</h1>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Veuillez entrer votre email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Veuillez entrer votre mot de passe" %>
          </div>

          <%# if devise_mapping.rememberable? -%>
            <%#= f.check_box :remember_me %> <%#= f.label :remember_me %>
          <%# end -%>

          <div  class="form-group">
            <%= f.submit "Se connecter", class: "button" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
